package com.Masai;

import java.util.Scanner;

public class BankAccountDetails {


	public Account getAccountDetails() {
		Scanner scan=new Scanner(System.in);
		System.out.println("Enter account id:");
		int id=scan.nextInt();
		System.out.println("Enter account type:");
		String type=scan.next();
		System.out.println("Enter account balance:");
		int balance=scan.nextInt();
		Account Ac=new Account(id,type,balance);
		return Ac;
	}

	public int getWithdrawAmount() {
		Scanner scan1=new Scanner(System.in);
		
		System.out.println("Enter amount to be withdrawn:");
		int amount=scan1.nextInt();
		BankAccountDetails B1 =new BankAccountDetails();
		System.out.println(B1.getAccountDetails());
			if(amount>0)
			{
				
				B1.getAccountDetails().withdraw(amount);
				
			}
			else
			{
				System.out.println("Amount should be positive");
				
			}
		
		return amount;
	}

	public static void main(String[] args) {
		
		
		BankAccountDetails B =new BankAccountDetails();
		B.getAccountDetails();
		B.getWithdrawAmount();
//		B.getAccountDetails().show();
		
		

		
		
		
			

	}

}
